@{
    ViewData["Title"] = "Import klientów";
}

<h2>Import klientów z CSV</h2>

<form asp-action="ImportujKlientow" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Wybierz plik CSV:</label>
        <input type="file" name="plik" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <label for="format">Format pliku:</label>
        <select name="format" id="format" class="form-control">
            <option value="csv">CSV</option>
            <option value="xlsx">XLSX</option>
        </select>
    </div>

    <button class="btn btn-dark" type="submit" style="margin-top:20px">Importuj</button>
</form>
